			<input type = "checkbox" value = "div" id = "div"  class = "opsec"> <label for="div">Division</label><br/>
			<input type = "checkbox" value = "sub" id = "sub" class = "opsec"> <label for = "sub">Subtraction</label><br/>
			<input type = "checkbox" value = "add" id = "add" class = "opsec"> <label for="add">Addition</label><br/>
	
			 <div class="newgame">
			 	<button class = "newgamebutton" onclick = "startgame()">Start!</button>
			 </div>
		</div>
		<div class="racecontainer">
			<div class="racecourse">
				
				<div class="playername" >
					<p>You</p>
				</div>
				<div class="position" >
					<div class="points">
						<img src = "/public/images/car3.png">
					</div>
				</div>
				<div class="finalpositioncontainer">
					<p class="finalposition">
					
					</p>	
				</div>
				
				<div class="playername">
					<p>Bot 1</p>
				</div>
			
				<div class="position">
					<div class="points">
						<img src = "/public/images/car2.png">
					</div>
				</div>

				<div class="finalpositioncontainer">
					<p class="finalposition">
					
					</p>	
				</div>

				<div class="playername">
					<p>Bot 2</p>
				</div>
				<div class="position">
					<div class="points">
						<img src = "/public/images/car.png">
					</div>
				</div>
				<div class="finalpositioncontainer">
					<p class="finalposition">
					
					</p>	
				</div>
			
			</div>
			<div class="questioncontainer">
				<div class="question">
					<button onclick = "startGame()" style = "color:white; background-image: linear-gradient(rgb(24, 202, 39), rgb(30, 219, 87)); padding: 15px; font-size: 22px; border-radius: 10px; border-color: green"> Start Game! </button>
				</div>
			</div>

			<div class="container">
				<input type = "text" id = "answer">
			</div>

			<div class="result">
				
			</div>
		
		</div>



		
	</div>
			
</body>
